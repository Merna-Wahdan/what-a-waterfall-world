<div class="row">
  <h1 class="text-center title-form">Change details of {{waterfall.name}}</h1>
  <div class="col-6 offset-3">
    <form
      method="POST"
      action="/waterfall/{{waterfall._id}}/edit"
      enctype="multipart/form-data"
      class="needs-validation" novalidate 
    >

      <div class="mb-3">
      <label class="form-label" for="name-edit">
          Name Waterfall:
          <input
            class="form-control"
            type="text"
            name="name"
            placeholder="Name Waterfall"
            id="name-edit"
            required
            value="{{waterfall.name}}"
          />
          <div class="invalid-feedback">
        Please enter the name of the waterfall
      </div>
        </label>
      </div>

      <div class="mb-3">
        <label class="form-label" for="country-edit">
          Country:
          <input
            class="form-control"
            type="text"
            name="country"
            placeholder="Country"
            id="country-edit"
            required
            value="{{waterfall.country}}"
          />
            <div class="invalid-feedback">
        Please enter the country where the waterfall is located
      </div>
        </label>
      </div>

      <div class="mb-3">
<label class="form-label" for="city-edit">
          City:
          <input
            class="form-control"
            type="text"
            name="city"
            placeholder="City"
            id="city-edit"
            required
            value="{{waterfall.city}}"
          />
           <div class="invalid-feedback">
        Please enter the city where the waterfall is located
      </div>
        </label>
      </div>

      <div class="mb-3">
         <label class="form-label" for="postal-edit">
          Postal code:
          <input
            class="form-control"
            type="text"
            name="postalCode"
            placeholder="Postal Code"
            id="postal-edit"
            value="{{waterfall.postalCode}}"
          />
        </label>
      </div>

       <div class="mb-3"> 
        <label class="form-label" for="latitude-edit">
          Latitude:
          <input
            class="form-control" 
            type="text"
            name="lat"
            placeholder="Latitude"
            id="latitude-edit"
          />
        </label>
      </div>

      <div class="mb-3"> 
        <label class="form-label" for="longitude-edit">
          Longitude:
          <input
            class="form-control" 
            type="text"
            name="lng"
            placeholder="Longitude"
            id="longitude-edit"
          />
        </label>
      </div>

      <div class="mb-3">
 <label class="form-label" for="transport-edit">
          How to get here:
          <textarea
            class="form-control"
            rows="4"
            cols="40"
            type="text"
            name="transportation"
            placeholder="Share your recommendations for traveling to this waterfall"
            id="transport-edit"  
            value="{{waterfall.transportation}}"
          ></textarea>
        </label>
      </div>

      {{! ********* IMAGE UPLOAD: *********}}
      <div class="form-group mb-3">
        <label class="form-label">Change existing image:
          <input
            class="form-control"
            type="file"
            name="waterfall-image"
          />
          <input
            type="text"
            name="existingImage"
            hidden
            value="{{waterfall.imageUrl}}"
          />
        </label>
      </div>

      <button class="btn btn-success mb-3">
        Save changes
      </button>

    </form>

    <form action="/waterfall/{{waterfall._id}}" method="GET">
      <button class="btn btn-danger mb-3">Cancel and back to waterfall details</button>
    </form>
    <br />

    <a href="/waterfalls">All waterfalls</a>

  </div>
</div>